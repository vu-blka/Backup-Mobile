<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="200dp"
    android:background="@drawable/login_main_background"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvVerifyContent"
        android:layout_marginTop="20dp"
        android:layout_width="260dp"
        android:layout_height="35dp"
        android:layout_gravity="center|top"
        android:text="Bạn có chắc chắn đăng xuất không? "
        android:textColor="#FF0000"
        android:textSize="15dp"
        android:textStyle="bold|italic" />

    <LinearLayout
        android:layout_width="230dp"
        android:layout_height="53dp"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:orientation="horizontal">

        <Button
            android:textSize="10dp"
            android:id="@+id/btnCancelLogout"
            android:layout_width="110dp"
            android:layout_height="50dp"
            android:drawableRight="@drawable/ic_cancel"
            android:background="@drawable/style_edit"
            android:text="Hủy" />

        <Button
            android:textSize="10dp"
            android:id="@+id/btnVerifyLogout"
            android:layout_width="110dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:drawableRight="@drawable/ic_verify"
            android:background="@drawable/style_edit"
            android:text="Xác thực" />

    </LinearLayout>


</LinearLayout>