<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginLeft="30dp"
    android:background="@drawable/member_dong">

    <LinearLayout
        android:id="@+id/LinearLayoutSV"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginVertical="5dp">
        <ImageView
            android:id="@+id/imageSV"
            android:src="@drawable/post_default_avatar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <TextView
            android:id="@+id/textMSV"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:text="N236"
            android:gravity="center"
            android:textSize="13dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:text=" - "
            android:gravity="center"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textTenSV"
            android:layout_width="170dp"
            android:layout_height="match_parent"
            android:text="Lù Vĩnh Trường"
            android:gravity="center"
            android:textSize="13dp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/deleteSV"
            android:src="@drawable/ic_delete"
            android:visibility="invisible"
            android:layout_width="30dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>


</FrameLayout>
