<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="400dp"
    android:background="#EAEAEA"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="80dp"
                android:layout_height="35dp"
                android:layout_gravity="center|top"
                android:text="Tên bài tập"
                android:textColor="#000"
                android:textSize="15dp"
                android:textStyle="bold"
                android:layout_marginRight="10dp"
                android:gravity="center"/>
            <EditText
                android:id="@+id/txtTitleExercise"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="#000"
                android:backgroundTint="#FFFFFF"
                android:textSize="18dp"
                android:gravity="center"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content">
               <TextView
                   android:layout_width="80dp"
                   android:layout_height="35dp"
                   android:layout_gravity="center|top"
                   android:text="Ngày đăng"
                   android:textColor="#000"
                   android:textSize="15dp"
                   android:textStyle="bold"
                   android:layout_marginRight="10dp"
                   android:gravity="center"/>
<!--               <com.google.android.material.textfield.TextInputEditText-->
<!--                   android:layout_width="150dp"-->
<!--                   android:layout_height="wrap_content"-->
<!--                   android:layout_gravity="center"-->
<!--                   android:background="#000"-->
<!--                   android:backgroundTint="#FFFFFF"-->
<!--                   android:textSize="18dp"-->
<!--                   android:gravity="center"-->
<!--                   />-->
               <EditText
                   android:layout_width="150dp"
                   android:layout_height="wrap_content"
                   android:id="@+id/et_ngayDang"
                   android:hint="Chọn ngày"
                   android:textSize="18dp"
                   android:textAlignment="center"
                   />
           </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="80dp"
                android:layout_height="35dp"
                android:layout_gravity="center|top"
                android:text="Hạn nộp"
                android:textColor="#000"
                android:textSize="15dp"
                android:textStyle="bold"
                android:layout_marginRight="10dp"
                android:gravity="center_vertical"/>
            <EditText
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:id="@+id/et_hanNop"
                android:hint="Chọn ngày"
                android:textSize="18dp"
                android:textAlignment="center"
                />
        </LinearLayout>

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="Nội dung"
            android:textColor="#000"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_marginTop="10dp"
            android:background="#000"
            android:backgroundTint="#FFFFFF"
            android:textSize="18dp"
            android:id="@+id/txtcontentExercise"
            android:layout_gravity="start"
            />

        <LinearLayout
            android:layout_width="230dp"
            android:layout_height="53dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <Button
                android:textSize="12dp"
                android:id="@+id/btnVerifyAddExercise"
                android:layout_width="110dp"
                android:layout_height="50dp"
                android:drawableRight="@drawable/ic_ok"
                android:backgroundTint="#D0D0"
                android:textColor="#000"
                android:text="Thêm" />

            <Button
                android:textSize="12dp"
                android:id="@+id/btnCancelAddExercise"
                android:layout_width="110dp"
                android:layout_height="50dp"
                android:drawableRight="@drawable/ic_cancel"
                android:layout_marginLeft="10dp"
                android:textColor="#000"
                android:text="Hủy" />



        </LinearLayout>
    </LinearLayout>



</LinearLayout>