<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:background="#EAEAEA" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="80dp"
                android:layout_height="35dp"
                android:layout_gravity="center|top"
                android:text="Tên folder:"
                android:textColor="#000"
                android:textSize="15dp"
                android:textStyle="bold"
                android:layout_marginRight="10dp"
                android:gravity="center"/>
            <EditText
                android:id="@+id/txtFolderName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#000"
                android:backgroundTint="#FFFFFF"
                android:textSize="18dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="15dp"
            android:weightSum="5"
            android:orientation="horizontal">
            <Button
                android:textSize="12dp"
                android:id="@+id/btnVerifyAddFolder"
                android:layout_width="110dp"
                android:layout_height="50dp"
                android:drawableRight="@drawable/ic_ok"
                android:backgroundTint="#D0D0"
                android:textColor="#000"
                android:layout_weight="1"
                android:text="Thêm" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="3"/>
            <Button
                android:textSize="12dp"
                android:id="@+id/btnCancelAddFolder"
                android:layout_width="110dp"
                android:layout_height="50dp"
                android:drawableRight="@drawable/ic_cancel"
                android:layout_marginLeft="10dp"
                android:textColor="#000"
                android:text="Hủy"
                android:layout_weight="1"/>

        </LinearLayout>


    </LinearLayout>



</LinearLayout>