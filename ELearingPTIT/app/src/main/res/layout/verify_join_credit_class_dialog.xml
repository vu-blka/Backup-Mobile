<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="300dp"
    android:background="@drawable/login_main_background"
    android:orientation="vertical">

    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="260dp"
        android:layout_height="35dp"
        android:layout_gravity="center|top"
        android:text="Hãy nhập mật khẩu tham gia lớp"
        android:textColor="#FF0000"
        android:textSize="15dp"
        android:textStyle="bold|italic" />


    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="15dp">

        <TextView
            android:layout_width="94dp"
            android:layout_height="25dp"
            android:text="Mật khẩu:"
            android:textAlignment="center"
            android:textSize="15dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edtJoinedPassword"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="15dp"
            android:textStyle="bold" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="230dp"
        android:layout_height="53dp"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:orientation="horizontal">

        <Button
            android:textSize="10dp"
            android:id="@+id/btnCancel"
            android:layout_width="110dp"
            android:layout_height="50dp"
            android:drawableRight="@drawable/ic_cancel"
            android:background="@drawable/style_edit"
            android:text="Hủy" />

        <Button
            android:textSize="10dp"
            android:id="@+id/btnVerify"
            android:layout_width="110dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:drawableRight="@drawable/ic_verify"
            android:background="@drawable/style_edit"
            android:text="Xác thực" />

    </LinearLayout>


</LinearLayout>